{
	"firestore": {
		"rules": "firestore.rules",
		"indexes": "firestore.indexes.json"
	},
	"hosting": {
		"public": "public",
		"cleanUrls": true,
		"ignore": [
			"firebase.json",
			"**/.*",
			"**/node_modules/**"
		],
		"rewrites": [
			{
				"source": "/login",
				"destination": "/auth/login.html"
			},
			{
				"source": "/admin/home",
				"destination": "/admin/adminHome.html"
			},
			{
				"source": "/admin",
				"destination": "/admin/admin.html"
			},
			{
				"source": "**",
				"destination": "/404.html"
			}
		]
	}
}